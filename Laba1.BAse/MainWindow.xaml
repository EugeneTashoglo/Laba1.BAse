<Window x:Class="Laba1.BAse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba1.BAse"
        mc:Ignorable="d"
      Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="40,0,40,0" VerticalAlignment="Center" Background="#ffdadeda" Height="123">
            <Label Content="Количество часов работы"/>
            <TextBox x:Name="Hour" Background="White"></TextBox>
            <Label Content="Тариф за час"/>
            <TextBox x:Name="Tarif" Background="White"></TextBox>
            <Button Content="Общая стоимость работы" Click="Button_Click" Background="#ffdadeda"/>
            <TextBlock x:Name="end" Background="White"></TextBlock>

        </StackPanel>
    </Grid>
</Window>